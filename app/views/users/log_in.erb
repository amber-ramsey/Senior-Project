<% provide(:title, "Log In") %>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <%= link_to "Senior Project", root_path , id: "logo" %>
  </div>
</header>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: log_in_path, scope: :session, local: true) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    </br>
    <p>
      <b><%= link_to "Forgot Password?", new_password_reset_path, :id => "password_reset_link" %></b>
      </br></br>
      <b><%= link_to "Sign up now!", sign_up_path %></b>
    </p>
  </div>
</div>