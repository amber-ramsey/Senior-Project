<% provide(:title, "Log In") %>
<header class="fixed-top" style="background-color: #000080; margin-top: -10; margin-left:-50; padding-bottom: 5">
  <nav>
    <div class="container-fluid">
      <ul>
        <li class="nav navbar-brand nav-link" style="float:left">
          <!--change text-->
          <%= link_to "Senior Project", home_path , id: "logo" %>
        </li>
      </ul>
    </div>
  </nav>
</header>

<h1>Log in</h1>
</br>
<div class="row justify-content-md-center">
  <div class="col-4">
    <%= form_with(url: log_in_path, scope: :session, local: true) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    
    <p><b><%= link_to "Forgot Password?", new_password_reset_path, :id => "password_reset_link" %></b></p>
    <p><b><%= link_to "Sign up now!", sign_up_path %></b></p>
  </div>
</div>