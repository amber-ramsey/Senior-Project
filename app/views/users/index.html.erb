<% provide(:title, "List of Users") %>
<html>
  <body>
    <!--maybe add table responsive bootstrap-->
    <div class="row">
      <div class="col-xl-5 mb-4">
        <div class="card h-100">
          <div class="card-body mx-auto">
            <!--List of Admin-->
            <div class="container-fluid">
              <!--<span style= "float:left">-->
                <h2 class="card-title">Admin</h2>
                </br>
                
                <!--search bar
                <#%= form_tag(method: :get) do %>
                  <%= text_field_tag(:search, params[:search]) %>
                  <%= submit_tag ("Search") %>
                <#% end %>-->

                <!--<= will_paginate %>-->
                
                <table>
                  <thead>
                    <tr align= left>
                      <th width=150px><%= link_to "First Name", class:"link-primary ", :sort => "firstName"%></th>
                      <th width=150px><%= link_to "Last Name", class:"link-primary ", :sort => "lastName"%></th>
                      <th width=200px>Email</th>
                    </tr>
                  </thead>
                
                  <tbody>
                    <% @admin.find_each do |user| %>
                      <tr>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td><%= user.email %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                
                <!--<= will_paginate %>-->
                
                <!--<br>-->
              <!--</span>-->
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-xl-7 mb-4">
        <div class="card h-100">
          <div class="card-body mx-auto">
            <!--List of Users-->
            <div class="container-fluid">
              <!--<span style= "float:right">-->
                <h2 class="card-title">Users</h2>
                </br>
                
                <!--search bar
                <#%= form_tag(method: :get) do %>
                  <%= text_field_tag(:search, params[:search]) %>
                  <%= submit_tag ("Search") %>
                <#% end %>-->

                <!--<= will_paginate %>-->
                
                <table>
                  <thead>
                    <tr align= left>
                      <th width=150px><%= link_to "First Name", class: "link-primary", :sort => "firstName"%></th>
                      <th width=150px><%= link_to "Last Name", class: "link-primary ", :sort => "lastName"%></th>
                      <th width=200px>Email</th>
                      <th width=150px>School Id</th>
                      <th width=150px></th>
                    </tr>
                  </thead>
                
                  <tbody>
                    <% @users.find_each do |user| %>
                      <tr>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td><%= user.email %></td>
                        <td><%= user.schoolID %></td>
                        <td class="promote"><%= link_to 'Promote User', :back, class: "promote btn-primary text-white", method: "promote(user)", data: { confirm: 'Are you sure you want to promote this user to be an admin?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                
                <!--<= will_paginate %>-->
              <!--</span>-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>