<% provide(:title, "List of Users") %>
<html>
  <body>
    <!--maybe add table responsive bootstrap-->
    <div class="row">
      <div class="col-xl-5 mb-3">
        <div class="card h-100 border-primary">
          <div class="card-body container-fluid px-0" style="overflow-x:auto">
            <!--List of Admin-->
            <!--<span style= "float:left">-->
              <h2 class="card-title mb-3">Admin</h2>
   
              
              <!--search bar
              <#%= form_tag(method: :get) do %>
                <%= text_field_tag(:search, params[:search]) %>
                <%= submit_tag ("Search") %>
              <#% end %>-->

              <!--<= will_paginate %>-->
              
              <table>
                <thead>
                  <tr>
                    <!--th><#%= link_to "First Name", :sort => "firstName"%></th>
                    <th><#%= link_to "Last Name", :sort => "lastName"%></th-->
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @admin.find_each do |user| %>
                    <tr>
                      <td><%= user.firstName %></td>
                      <td><%= user.lastName %></td>
                      <td><%= user.email %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              
              <!--<= will_paginate %>-->
              
              <!--<br>-->
            <!--</span>-->
          </div>
        </div>
      </div>
      
      <div class="col-xl-7 mb-3">
        <div class="card h-100 border-primary">
          <div class="card-body container-fluid px-0 h-100" style="overflow-x:auto">
            <!--List of Users-->
            <!--<span style= "float:right">-->
              <h2 class="card-title mb-3">Users</h2>
              
              
              <!--search bar
              <#%= form_tag(method: :get) do %>
                <%= text_field_tag(:search, params[:search]) %>
                <%= submit_tag ("Search") %>
              <#% end %>-->

              <!--<= will_paginate %>-->
              
              <table>
                <thead>
                  <tr>
                    <!--th><#%= link_to "First Name", :sort => "firstName"%></th>
                    <th><#%= link_to "Last Name", :sort => "lastName"%></th-->
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>School ID</th>
                    <th></th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @users.find_each do |user| %>
                    <tr>
                      <td><%= user.firstName %></td>
                      <td><%= user.lastName %></td>
                      <td><%= user.email %></td>
                      <td><%= user.schoolID %></td>
                      <td style="padding: 0px 10px">
                        <%= link_to 'Promote User', profile_update_path(id: user.id, Promote: true), method: :patch, params: {Promote: true}, class: "promote btn-primary text-white", data: { confirm: 'Are you sure you want to promote this user to be an admin?' } %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <!--<= will_paginate %>-->
            <!--</span>-->
          </div>
        </div>
      </div>
    </div>
  </body>
</html>